<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/message_img_circle"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        app:cardCornerRadius="40dp">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/message_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/message_txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/message_img_circle"
        android:layout_toRightOf="@id/message_img_circle"
        android:text="@string/username"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/message_txt_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/message_txt_username"
        android:layout_margin="8dp"
        android:layout_toEndOf="@id/message_img_circle"
        android:layout_toRightOf="@id/message_img_circle"
        android:text="@string/message" />

</RelativeLayout>